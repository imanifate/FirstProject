@using AppStore.Domain.ViewModels
@model ResetPasswordViewMdel

@{
    ViewBag.Titel = "فراموشی رمز";

}

<section class="border-radius">
    <header><h3>ثبت نام</h3></header>
    <article>
        <div class="col-md-10 col-sm-10 col-xs-12">

            <form asp-action="ResetPassword" asp-controller="Account" method="post">
                <div class="form-group">
                    <input asp-for="ActiveCode" type="text" class="form-control" placeholder="کد فعال سازی">
                    <span asp-validation-for="ActiveCode" class="inner-text"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور">
                    <span asp-validation-for="Password" class="inner-text"></span>
                </div>
                <div class="form-group">
                    <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار رمز عبور ">
                    <span asp-validation-for="RePassword" class="inner-text"></span>
                </div>
                <input asp-action="Register" asp-controller="Account" type="submit" value="ثبت نام">
                <div asp-validation-summary="All"></div>
            </form>

        </div>
        <div class="clearfix"></div>
    </article>
</section>

@section Scripts
                {
    <partial name="_ValidationScriptsPartial" />
}
