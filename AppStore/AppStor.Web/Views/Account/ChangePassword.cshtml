@using AppStore.Domain.ViewModels
@using System.Security.Claims
@model ChangePasswordViewModel

@{
    ViewBag.Titel = "تغییر رمز عبور";

}

<section class="border-radius">
    <header><h3> تغییر رمز عبور</h3></header>
    <article>
        <div class="col-md-10 col-sm-10 col-xs-12">

            <form asp-action="ChangePassword" asp-controller="Account" method="post">
                <input asp-for="Id" type="hidden" value="@Convert.ToInt32(User.FindFirstValue(ClaimTypes.NameIdentifier))")  />
                
                <div class="form-group">
                    <input asp-for="OldPassword" type="text" class="form-control" placeholder="رمز عبور فعلی">
                    <span asp-validation-for="OldPassword" class="inner-text"></span>

                </div>
                <div class="form-group">
                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبورجدید">
                    <span asp-validation-for="Password" class="inner-text"></span>

                </div>
                <div class="form-group">
                    <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار رمز عبور ">
                    <span asp-validation-for="RePassword" class="inner-text"></span>

                </div>
                <input type="submit" value="تغییر رمز عبور">
                <div asp-validation-summary="All"></div>
            </form>

        </div>
        <div class="clearfix"></div>
    </article>
</section>

@section Scripts
                    {
    <partial name="_ValidationScriptsPartial" />
}
