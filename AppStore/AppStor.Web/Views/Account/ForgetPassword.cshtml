@using AppStore.Domain.ViewModels
@model ForgetPasswordViewModel

@{

	ViewData["Titel"] = " فراموشی رمز";
}
<div class="col-md-9 col-sm-8 left-side-content internal-style">

	<section class="border-radius">
		<header><h3> ورود به سایت </h3></header>
		<article>
			<div class="col-md-10 col-sm-10 col-xs-12">

				<form method="post" asp-action="ForgetPassword" asp-controller="Account">
					@if (User.Identity.IsAuthenticated)
					{
							<div class="alert alert-danger">
								شما دسترسی به قسمت مورد نظر ندارید
							</div>
					}

					<div class="form-group">
						<input asp-for="Email" type="text" class="form-control" placeholder=" ایمیل ">
						<span asp-validation-for="Email" class="inner-text"></span>

					</div>
					<p><a asp-action="Register" asp-controller="Account" ><i class="fa fa-user-plus"></i>ثبت نام کنید!</a></p>
					<input type="submit" value=" تایید ">
				</form>

			</div>
			<div class="clearfix"></div>
		</article>
	</section>

</div>


@section Scripts
{
		<partial name="_ValidationScriptsPartial" />
}

