@using AppStore.Domain.ViewModels
@model LoginAccountViewModel

@{

	ViewData["Titel"] = "عضو شدن";
}
<div class="col-md-9 col-sm-8 left-side-content internal-style">

	<section class="border-radius">
		<header><h3> ورود به سایت </h3></header>
		<article>
			<div class="col-md-10 col-sm-10 col-xs-12">

				<form method="post" asp-action="Login" asp-controller="Account">
					<div class="form-group">
						<input asp-for="UserNameOrEmail" type="text" class="form-control" placeholder="نام کاربری ">
					</div>
					<div class="form-group">
						<input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور">
					</div>
					<p><a href=""><i class="fa fa-lock"></i>رمز عبور خود را فراموش کرده ام !</a></p>
					<p><a href=""><i class="fa fa-user-plus"></i>ثبت نام کنید!</a></p>
					<label><input asp-for="RemmberMe" type="checkbox"> مرا بخاطر بسپار! </label>
					<input type="submit" value=" ورود به سایت">
				</form>

			</div>
			<div class="clearfix"></div>
		</article>
	</section>

</div>


@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}

