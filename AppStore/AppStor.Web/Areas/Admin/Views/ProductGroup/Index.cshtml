@using AppStore.Domain.ViewModels
@model List<ProductGroupViewModels>

@{
    ViewData["Title"] = "لیست گروه ها";
}

<div class="content-wrapper" style="min-height: 617.6px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a asp-controller="ProductGroup" asp-action="Index" asp-area="Admin">خانه</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
            <div class="row d-flex justify-content-start">
                <a asp-action="Creat" class="btn btn-primary d-inline-flex align-items-center">
                    <i class="fa fa-plus"></i><span class="mr-2">افزودن گروه جدید</span>
                </a>
            </div>

        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">جدول ۴</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <table class="table table-striped">
                                <tbody>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>عنوان گروه</th>
                                        <th>تاریخ ایجاد</th>
                                        <th>تاریخ ویرایش</th>
                                        <th>حذف شده؟</th>
                                    </tr>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Model.IndexOf(item)</td>
                                            <td> @item.GroupTitel </td>
                                            <td> @item.CreatDate </td>
                                            <td> @item.ModifiedDate </td>
                                            <td><i class="fa @(item.IsDelete ? "fa fa-check": "fa-times-circle-o")"></i></td>
                                            <td>
                                                <a asp-action="Edit" asp-route-Id="@item.GroupId" class="btn btn-warning d-inline-flex align-items-center">
                                                    <i class="fa fa-edit"></i><span class="mr-2">ویرایش</span>
                                                </a>
                                                <a asp-action="Delete" asp-route-Id="Id" class="btn btn-danger d-inline-flex align-items-center">
                                                    <i class="fa fa-trash"></i><span class="mr-2">حذف</span>
                                                </a>
                                            </td>
                                        </tr>


                                    }


                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer clearfix">
                            <ul class="pagination pagination-sm m-0 float-right">
                                <li class="page-item"><a class="page-link" href="#">«</a></li>
                                <li class="page-item"><a class="page-link" href="#">۱</a></li>
                                <li class="page-item"><a class="page-link" href="#">۲</a></li>
                                <li class="page-item"><a class="page-link" href="#">۳</a></li>
                                <li class="page-item"><a class="page-link" href="#">»</a></li>
                            </ul>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>