@using AppStore.Domain.ViewModels
@model EditProductGroupViewModels
@{
    ViewData["Title"] = "ویرایش گروه";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" asp-area="Admin">خانه</a></li>
                    <li class="breadcrumb-item"><a asp-controller="ProductGroup" asp-action="Index" asp-area="Admin">لیست گروها</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>

    </div><!-- /.container-fluid -->
</section>


<form asp-action="EditGroup"  asp-controller="ProductGroup" asp-area="Admin" method="post" role="form">
    <div class="card-body">
        <input asp-for="GroupId" type="hidden" />
        <div class="form-group">
            <label asp-for="GroupTitel" for="exampleInput"> عنوان گروه</label>
            <input asp-for="GroupTitel"  type="text" class="form-control" id="exampleInputEm" placeholder="عنوان گروه را وارد کنید">
        </div>
        <div class="form-group">

            <input asp-for="ModifiedDate" type="hidden" class="form-control" id="exampleInputEm" >
        </div>
        <div class="form-check">
            <input asp-for="IsDeleted" type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1"> حذف</label>
        </div>

          </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">ثبت</button>
    </div>
</form>