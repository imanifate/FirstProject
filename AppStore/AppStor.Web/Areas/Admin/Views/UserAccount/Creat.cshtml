@using AppStore.Domain.ViewModels
@model CreatAccountViewModel
@{
    ViewData["Title"] = "افزودن کاربران";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" asp-area="Admin">خانه</a></li>
                    <li class="breadcrumb-item"><a asp-controller="UserAccount" asp-action="List" asp-area="Admin">لیست کاربران</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
       
    </div><!-- /.container-fluid -->
</section>


<form asp-action="Creat" asp-controller="UserAccount" asp-area="Admin" role="form">
    <div class="card-body">
        <div class="form-group">
            <label asp-for="UserName" for="exampleInput"> نام کاربری</label>
            <input asp-for="UserName" type="text" class="form-control" id="exampleInputEm" placeholder="نام کاربری را وارد کنید">
        </div>

        <div class="form-group">
            <label asp-for="Email" for="exampleInputEmail1">آدرس ایمیل</label>
            <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" placeholder="ایمیل را وارد کنید">
        </div>
        <div class="form-group">
            <label asp-for="Password" for="exampleInputEmail1"> رمز</label>
            <input asp-for="Password" type="password" class="form-control" id="exampleInputEmail1" placeholder="رمز  را وارد کنید">
        </div>
        <div class="form-check">
            <input asp-for="IsAdmin" type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1"> ادمین</label>
        </div>
        <div class="form-check">
            <input asp-for="IsActive" type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1"> فعال</label>
        </div>
        <div class="form-check">
            <input asp-for="IsDelete" type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1"> حذف</label>
        </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">ارسال</button>
    </div>
</form>