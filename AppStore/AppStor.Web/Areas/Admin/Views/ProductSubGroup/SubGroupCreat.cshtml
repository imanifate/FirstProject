@using AppStore.Domain.ViewModels
@model CreatProductSubGroupViewModels
@{
    ViewData["Title"] = "افزودن زیرگروه";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" asp-area="Admin">خانه</a></li>
                    <li class="breadcrumb-item"><a asp-controller="ProductGroup" asp-action="GroupList" asp-area="Admin">لیست گروه ها</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>

    </div><!-- /.container-fluid -->
</section>


<form asp-action="SubGroupCreat" asp-controller="ProductSubGroup" asp-area="Admin" method="post" role="form">
    <div class="card-body">
        <input asp-for="GroupId" type="hidden"  class="form-control" />
         <div class="form-group">
            <input asp-for="GroupTitle"  class="form-control">
        </div> 
        <div class="form-group">
            <label asp-for="SubGroupTitel" for="exampleInput"> عنوان زیرگروه</label>
            <input asp-for="SubGroupTitel" type="text" class="form-control" placeholder="عنوان زیرگروه را وارد کنید">
        </div>
    </div>
    

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">ثبت</button>
    </div>
</form>